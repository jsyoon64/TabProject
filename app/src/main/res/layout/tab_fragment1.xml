<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jsyoon.tabproject.TabFragment1">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="20dp">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/button_edm"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/edm" />

        <Button
            android:id="@+id/button_eeg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/eeg" />

        <Button
            android:id="@+id/button_gyro"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/gyro" />

        <Button
            android:id="@+id/button_ppg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ppg" />

        <Button
            android:id="@+id/button_temp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/temp" />

    </LinearLayout>

</LinearLayout>
